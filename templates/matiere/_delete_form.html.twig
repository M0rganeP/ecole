<form method="post" action="{{ path('matiere_delete', {'id': matiere.id}) }}" onsubmit="return confirm('etse-vous certain.e de vouloir supprimer cette matière, ainsi que toutes les informations qui lui sont liées?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ matiere.id) }}">
    <button class="btn">Supprimer</button>
</form>
