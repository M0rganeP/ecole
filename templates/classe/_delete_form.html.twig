<form method="post" action="{{ path('classe_delete', {'id': classe.id}) }}" onsubmit="return confirm('Etes vous certain.e de vouloir supprimer toutes les données associées à cette classe?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ classe.id) }}">
    <button class="btn">Supprimer</button>
</form>
